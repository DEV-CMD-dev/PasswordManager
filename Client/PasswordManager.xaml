<Window x:Class="Client.PasswordManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="Password Manager" Height="800" Width="1100" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CustomTabItemStyle" TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2">
            <TabControl
                Style="{StaticResource MaterialDesignFilledTabControl}"
                TabStripPlacement="Left"
                SelectedIndex="1">

                <TabItem IsEnabled="False" Opacity="1" Height="70">
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center">
                            <DockPanel Margin="5">
                                <Image Width="35" Source="/account(2).png" ></Image>
                                <TextBlock x:Name="Username" Text="Username" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"
                                    Margin="5"></TextBlock>
                            </DockPanel>
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <!--Profile-->

                <TabItem Header="Profile" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>

                        <TextBlock DockPanel.Dock="Left" Text="Personal data"  FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5" Grid.Row="1"></TextBlock>

                        <StackPanel Grid.Row="3">
                            <Border HorizontalAlignment="Center" Margin="0,10">
                                <Ellipse Width="150" Height="150">
                                    <Ellipse.Fill>
                                        <ImageBrush  Stretch="UniformToFill" ImageSource="/account(1).png"  />
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>

                            <Border BorderBrush="Black" CornerRadius="16" Margin="50,0" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Personal information" Margin="20,5" />

                                    <GridSplitter Grid.Row="1"
                                          Height="1"
                                          Background="Black"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"
                                          ShowsPreview="True" 
                                          Margin="0,5"/>
                                    <Grid Grid.Row="2" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            Margin="10,10"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Name"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="10"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Surname"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        
                                        
                                    </Grid>
                                    <TextBox
                                         Margin="20,10"
                                         Grid.Row="3"
                                         Name="UsernameData"
                                         IsEnabled="False"
                                         VerticalAlignment="Top"
                                         materialDesign:HintAssist.Hint="Username"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>
                            </Border>

                            <DockPanel>
                                <Border BorderBrush="Black" CornerRadius="16" Margin="50,20" BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="Change password" Margin="20,5" />

                                        <GridSplitter Grid.Row="1"
                                              Height="1"
                                              Background="Black"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              ShowsPreview="True" 
                                              Margin="0,5"/>
                                        <Grid Grid.Row="2" Margin="10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <TextBox
                                                Margin="10,10"
                                                Grid.Row="0"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="Current password"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            <TextBox
                                                Grid.Row="1"
                                                Margin="10"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="New password"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            <TextBox
                                                Grid.Row="2"
                                                Margin="10"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="Confirm password"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DockPanel>

                            <Button Margin="350,0" Content="Apply changes"></Button>

                        </StackPanel>

                    </Grid>

                </TabItem>
                
                <!--Passwords-->
                
                <TabItem Header="Passwords" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>
                        <TextBlock Text="Passwords" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"></TextBlock>

                        <Button Grid.Row="1" Grid.Column="1" Width="150" Click="AddPasswordLine">Add password</Button>

                        <ItemsControl x:Name="PasswordList" Grid.Row="2" Grid.ColumnSpan="2">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Margin="20" IsItemsHost="True" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Margin="8" Padding="8" Width="300" MinWidth="250">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <!-- Website -->
                                                <RowDefinition Height="Auto" />
                                                <!-- User -->
                                                <RowDefinition Height="Auto" />
                                                <!-- Password -->
                                                <RowDefinition Height="Auto" />
                                                <!-- Stars -->
                                                <RowDefinition Height="Auto" />
                                                <!-- Desc -->
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Website Row -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <!-- TextBox -->
                                                    <ColumnDefinition Width="Auto" />
                                                    <!-- Button -->
                                                </Grid.ColumnDefinitions>

                                                <TextBox
                                                    Grid.Column="0"
                                                    materialDesign:HintAssist.Hint="Website"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                    HorizontalAlignment="Stretch" />

                                                <Button
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    Click="CopyToClipboard"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                    <materialDesign:PackIcon Kind="ContentCopy" />
                                                </Button>
                                            </Grid>

                                            <!-- User Row -->
                                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBox
                                                    Grid.Column="0"
                                                    materialDesign:HintAssist.Hint="User"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                    HorizontalAlignment="Stretch" />

                                                <Button
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    Click="CopyToClipboard"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                    <materialDesign:PackIcon Kind="ContentCopy" />
                                                </Button>
                                            </Grid>

                                            <!-- Password Row -->
                                            <Grid Grid.Row="2" Margin="0,0,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <PasswordBox
                                                    Grid.Column="0"
                                                    VerticalContentAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Password"
                                                    Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                                    HorizontalAlignment="Stretch" />

                                                <Button
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    Click="CopyToClipboard"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                    <materialDesign:PackIcon Kind="ContentCopy" />
                                                </Button>
                                            </Grid>

                                            <!-- Stars -->
                                            <materialDesign:RatingBar
                                                Grid.Row="3"
                                                Orientation="Horizontal"
                                                Value="3"
                                                Margin="0,0,0,8"
                                                HorizontalAlignment="Left"/>

                                            <!-- Description -->
                                            <TextBlock Grid.Row="4"
                                                Text="Desc"
                                                TextWrapping="Wrap"
                                                Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                Margin="0,0,0,8"/>

                                            <Separator Grid.Row="5"
                                                Margin="0,8"
                                                Style="{StaticResource MaterialDesignDarkSeparator}" />

                                            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Click="DeletePassword">Delete</Button>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>

                </TabItem>
                <TabItem Header="Categories" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>

                        <TextBlock Text="Categories" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"></TextBlock>
                    </Grid>

                </TabItem>
                
               
                
                <TabItem Header="Favorites" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>

                        <TextBlock Text="Favorites" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"></TextBlock>
                    </Grid>


                </TabItem>
                <TabItem Header="Settings" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>

                        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"></TextBlock>
                    </Grid>

                </TabItem>
                <TabItem Header="Password generator" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <local:SearchBar Grid.ColumnSpan="2"></local:SearchBar>

                        <TextBlock Text="Password generator" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"></TextBlock>
                    </Grid>

                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
