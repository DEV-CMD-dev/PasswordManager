<Window x:Class="Client.PasswordManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="Password Manager" Height="850" Width="1100" WindowStartupLocation="CenterScreen">



    <Window.Resources>
        <Style x:Key="CustomTabItemStyle" TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2">
            <TabControl
                Style="{StaticResource MaterialDesignFilledTabControl}"
                TabStripPlacement="Left"
                SelectedIndex="1">

                <TabItem IsEnabled="False" Opacity="1" Height="70">
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center">
                            <DockPanel Margin="5">
                                <Ellipse Width="35" Height="35" Margin="0,0,5,0">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="HeaderAvatarBrush" ImageSource="/account(2).png" Stretch="UniformToFill" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock x:Name="Username" Text="Username" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"
                                    Margin="5"/>
                            </DockPanel>
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <!--Profile-->

                <TabItem Header="{Binding Localization.TabProfile}" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        

                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.ProfileTitle}"  FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="20" Grid.Row="1"/>

                        <StackPanel Grid.Row="3">
                            <Border HorizontalAlignment="Center" Margin="0,10" MouseLeftButtonUp="AvatarBorder_MouseLeftButtonUp" Cursor="Hand">
                                <Ellipse Width="150" Height="150">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="AvatarImageBrush" Stretch="UniformToFill" ImageSource="/account(1).png"  />
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>

                            <Border BorderBrush="Black" CornerRadius="16" Margin="50,0" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding Localization.ProfilePersonalInfo}" Margin="20,5" />

                                    <GridSplitter Grid.Row="1"
                                          Height="1"
                                          Background="Black"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"
                                          ShowsPreview="True" 
                                          Margin="0,5"/>
                                    <Grid Grid.Row="2" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            Margin="10,10"
                                            Name="EmailTextBox"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="{Binding Localization.ProfileHintEmail}"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        


                                    </Grid>
                                    <TextBox
                                         Margin="20,10"
                                         Grid.Row="3"
                                         Name="UsernameData"
                                         IsEnabled="False"
                                         VerticalAlignment="Top"
                                         materialDesign:HintAssist.Hint="{Binding Localization.ProfileHintUsername}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>
                            </Border>

                            <DockPanel>
                                <Border BorderBrush="Black" CornerRadius="16" Margin="50,20" BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Localization.ProfileChangePassword}" Margin="20,5" />

                                        <GridSplitter Grid.Row="1"
                                              Height="1"
                                              Background="Black"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              ShowsPreview="True" 
                                              Margin="0,5"/>
                                        <Grid Grid.Row="2" Margin="10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <TextBox
                                                Name="tbCurrentPassword"
                                                Margin="10,10"
                                                Grid.Row="0"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="{Binding Localization.ProfileHintCurrentPassword}"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            <TextBox
                                                Name="tbNewPassword"
                                                Grid.Row="1"
                                                Margin="10"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="{Binding Localization.ProfileHintNewPassword}"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            <TextBox
                                                Name="tbConfirmPassword"
                                                Grid.Row="2"
                                                Margin="10"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="{Binding Localization.ProfileHintConfirmPassword}"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DockPanel>

                            <materialDesign:DialogHost
                              VerticalAlignment="Center"
                              ApplyBlurBackground="True"
                              BlurRadius="16"
                              CloseOnClickAway="True"
                              Identifier="sampleDialog6">
                                <Button Click="ChangePasswordBtn" Margin="350,0" Content="{Binding Localization.ProfileApplyChanges}"/>
                            </materialDesign:DialogHost>

                        </StackPanel>

                    </Grid>

                </TabItem>

                <!--Passwords-->

                <TabItem Header="{Binding Localization.TabPasswords}" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        
                        <TextBlock Text="{Binding Localization.PasswordsTitle}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"/>

                        <Button IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                              Style="{StaticResource MaterialDesignFloatingActionSecondaryLightButton}"
                              ToolTip="MaterialDesignFloatingActionSecondaryLightButton"
                              Click="RefreshPassword_Click"
                              Grid.Row="2"
                              Margin="0,0,100,20"
                              Grid.ColumnSpan="2"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Panel.ZIndex="10">
                            <materialDesign:PackIcon
                                Width="35"
                                Height="35"
                                Kind="Refresh"/>
                        </Button>
                        <Button
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="10"
                            Margin="20"
                            Click="AddPasswordLine"
                            Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                            ToolTip="Add new password">
                            <materialDesign:PackIcon
                                Width="35"
                                Height="35"
                                Kind="PlusCircleOutline"/>
                        </Button>

                        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="PasswordList" VirtualizingStackPanel.IsVirtualizing="False" ItemsSource="{Binding Passwords}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Margin="15" IsItemsHost="True" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="8" Padding="8" Width="300" MinWidth="250" LostFocus="SaveAllPasswords" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <!-- Website -->
                                                    <RowDefinition Height="Auto" />
                                                    <!-- User -->
                                                    <RowDefinition Height="Auto" />
                                                    <!-- Password -->
                                                    <RowDefinition Height="Auto" />
                                                    <!-- Stars -->
                                                    <RowDefinition Height="Auto" />
                                                    <!-- Desc -->
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <!-- Website Row -->
                                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <!-- TextBox -->
                                                        <ColumnDefinition Width="Auto" />
                                                        <!-- Button -->
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox
                                                        Grid.Column="0"
                                                        materialDesign:HintAssist.Hint="Website"
                                                        Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                        HorizontalAlignment="Stretch" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Margin="5,0,0,0"
                                                        Click="CopyToClipboard"
                                                        Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                        <materialDesign:PackIcon Kind="ContentCopy" />
                                                    </Button>
                                                </Grid>

                                                <!-- User Row -->
                                                <Grid Grid.Row="1" Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox
                                                        Grid.Column="0"
                                                        materialDesign:HintAssist.Hint="User"
                                                        Name="UserTextBox"
                                                        Text="{Binding User, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                        HorizontalAlignment="Stretch" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Margin="5,0,0,0"
                                                        Click="CopyToClipboard"
                                                        Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                        <materialDesign:PackIcon Kind="ContentCopy" />
                                                    </Button>
                                                </Grid>

                                                <!-- Password Row -->
                                                <Grid Grid.Row="2" Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <PasswordBox
                                                        Grid.Column="0"
                                                        VerticalContentAlignment="Center"
                                                        materialDesign:HintAssist.Hint="Password"
                                                        Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                                        HorizontalAlignment="Stretch" PasswordChanged="CheckStrength" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Margin="5,0,0,0"
                                                        Click="CopyToClipboard"
                                                        Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                                        <materialDesign:PackIcon Kind="ContentCopy" />
                                                    </Button>
                                                </Grid>

                                                <!-- Stars -->
                                                <materialDesign:RatingBar
                                                    IsEnabled="False"
                                                    Opacity="1"
                                                    Grid.Row="3"
                                                    Orientation="Horizontal"
                                                    Value="5"
                                                    Margin="0,0,0,8"
                                                    HorizontalAlignment="Left"/>

                                                <Separator Grid.Row="4"
                                                    Margin="0,8"
                                                    Style="{StaticResource MaterialDesignDarkSeparator}"/>

                                                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <!-- Favorites selection -->
                                                    <ToggleButton
                                                        Content="{materialDesign:PackIcon Kind=Heart}"
                                                        Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                                        Margin="0,0,0,8"/>
                                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Click="DeletePassword">Delete</Button>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                </TabItem>
                <TabItem Header="{Binding Localization.TabFavorites}" Style="{StaticResource CustomTabItemStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        

                        <TextBlock Text="{Binding Localization.TabFavorites}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"/>



                    </Grid>

                </TabItem>

                <TabItem Header="{Binding Localization.TabSettings}" Style="{StaticResource CustomTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <local:SearchBar Grid.ColumnSpan="2" />

                            <TextBlock Text="{Binding Localization.TabSettings}"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="10"
                               Grid.Row="1"
                               Grid.ColumnSpan="2" />

                            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
                                <WrapPanel ItemWidth="550" ItemHeight="Auto" Orientation="Vertical">
                                    <!-- SAFETY SECTION -->
                                    <TextBlock Text="{Binding Localization.SettingsTitle}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"
                                       Width="Auto" />

                                    <!-- 2FA -->
                                    <DockPanel Margin="25,5,0,0">
                                        <CheckBox Click="Update2FAStatus" Name="cb2FA" Width="20" Height="20" VerticalAlignment="Center" DockPanel.Dock="Left" />
                                        <TextBlock Text="{Binding Localization.Settings2FACheckbox}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           ToolTip="Extra verification layer using one-time code"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0" />
                                    </DockPanel>
                                    <DockPanel Margin="25,5,0,0">
                                        <CheckBox Name="clearBufferCb" Width="20" Height="20" VerticalAlignment="Center" DockPanel.Dock="Left" />
                                        <TextBlock Text="{Binding Localization.SettingsAutoclearBufferCheckbox}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           ToolTip="Extra safety measure to prevent stealing data from buffer"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0" />
                                    </DockPanel>

                                    <!-- Auto Lock -->
                                    <DockPanel Margin="25,5,0,0" LastChildFill="False">
                                        <CheckBox x:Name="AutoLockCheckBox" Width="20" Height="20" VerticalAlignment="Center" DockPanel.Dock="Left" />
                                        <TextBlock Text="{Binding Localization.SettingsEnableAutoLockAfter}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           ToolTip="Locks app after inactivity"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           DockPanel.Dock="Left" />
                                        <ComboBox x:Name="AutoLockTimeComboBox" MinWidth="150" Margin="20,0" SelectionChanged="AutoLockTimeComboBox_SelectionChanged" >
                                            <ComboBoxItem Content="30 seconds" Tag="30" />
                                            <ComboBoxItem Content="1 minute" Tag="60" />
                                            <ComboBoxItem Content="5 minutes" Tag="300" />
                                            <ComboBoxItem Content="30 minutes" Tag="1800" />
                                        </ComboBox>
                                    </DockPanel>

                                    <!-- Colors -->
                                    <TextBlock Text="{Binding Localization.SettingsAppearanceTextBlock}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,20,0,10"
                                       Width="Auto" />

                                    <!-- Theme -->
                                    <DockPanel Margin="25,0,0,0">
                                        <TextBlock Text="{Binding Localization.SettingsThemeComboBox}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"
                                           DockPanel.Dock="Left" />
                                        <ComboBox Width="150"  Margin="60,0,0,0">
                                            <ComboBoxItem Content="Light" />
                                            <ComboBoxItem Content="Dark" />
                                            <ComboBoxItem Content="System default" />
                                        </ComboBox>
                                    </DockPanel>

                                    <!-- Language -->
                                    <DockPanel Margin="25,5,0,0">
                                        <TextBlock Text="{Binding Localization.SettingsLanguageComboBox}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,70,0"
                                           DockPanel.Dock="Left" />
                                        <ComboBox Width="150" HorizontalAlignment="Center" Name="LanguageSettingsCb" SelectionChanged="ChangeLanguage">
                                            <ComboBoxItem Content="English" />
                                            <ComboBoxItem Content="Українська" />
                                        </ComboBox>
                                    </DockPanel>

                                </WrapPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="{Binding Localization.TabPasswordGenerator}" Style="{StaticResource CustomTabItemStyle}">

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Localization.GeneratePasswordTitle}" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>

                        <StackPanel Margin="0,15,0,0" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                            <TextBox x:Name="GeneratedPasswordTextBox" VerticalContentAlignment="Center" FontSize="15" Width="300" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Height="50"/>
                            <Button
                                Margin="5,0,0,0"
                                Click="CopyGeneratedPasswordButtonClick"
                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Kind="ClipboardOutline"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Width="335">

                            <TextBlock x:Name="PasswordStrengthTextBlock"/>
                            <TextBlock x:Name="PasswordStrengthStarsTextBlock" FontFamily="Consolas" FontSize="22"/>

                            <Separator/>
                            <DockPanel LastChildFill="False">
                                <TextBlock Padding="10" Text="{Binding Localization.GeneratePasswordLength}" FontSize="16" FontWeight="Bold"/>
                                <TextBox x:Name="GeneratePasswordLength" DockPanel.Dock="Right" Margin="0,0,10,0" VerticalContentAlignment="Center" FontSize="10" Height="30" Width="60"/>
                            </DockPanel>

                            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="{Binding Localization.GeneratePasswordIncludeUppercaseLetters}" x:Name="IncludeUppercaseLetters"/>
                            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="{Binding Localization.GeneratePasswordIncludeLowercaseLetters}" x:Name="IncludeLowercaseLetters"/>
                            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="{Binding Localization.GeneratePasswordIncludeNumbers}" x:Name="IncludeNumbers"/>
                            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="{Binding Localization.GeneratePasswordIncludeSymbols}" x:Name="IncludeSymbols"/>

                            <Button Content="Generate" Click="GeneratePassword"/>
                        </StackPanel>

                        <!--<TextBox x:Name="GeneratedPasswordTextBox" Grid.Row="2" Margin="0,10,0,0" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" HorizontalAlignment="Center" Width="300"/>

                        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Center">
                            <TextBlock x:Name="PasswordStrengthTextBlock" FontWeight="Bold" TextAlignment="Center" Width="200" FontSize="22"/>
                            <TextBlock x:Name="PasswordStrengthStarsTextBlock" FontFamily="Consolas" TextAlignment="Center" Width="200" FontSize="22"/>
                        </StackPanel>-->
                    </Grid>

                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
