<Window x:Class="PasswordManager.PasswordManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="Password Manager" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <DockPanel Margin="5">
                <Image  Width="35" Source="/user.png"></Image>
                <TextBlock Text="UserName" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"
                           Margin="5"></TextBlock>
            </DockPanel>
        </StackPanel>

        <DockPanel Grid.Column="1" Margin="5">

            <Grid Grid.Column="1" Margin="5">
                <materialDesign:AutoSuggestBox
                    x:Name="SearchBox"
                    materialDesign:HintAssist.Hint="Search"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    DropDownElevation="Dp0"
                    Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
                    Suggestions="{Binding FilteredSuggestions}"
                    Text="{Binding AutoSuggestBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


                <Image
                    Width="20"
                    Height="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    IsHitTestVisible="False" Source="/search.png"/>
            </Grid>


        </DockPanel>

        <materialDesign:Card Grid.Row="1" Margin="5,2,2,2">
            <TabControl
                Style="{StaticResource MaterialDesignFilledTabControl}"
                TabStripPlacement="Left">
                <TabItem
                    Header="Profile">
                    
                </TabItem>
                <TabItem
                     Header="Passwords">
                    
                </TabItem>
                <TabItem
                    Header="Categories">
                    
                </TabItem>
                <TabItem 
                    Header="Favorites">
                    

                </TabItem>
                <TabItem
                    Header="Settings">
                    
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
