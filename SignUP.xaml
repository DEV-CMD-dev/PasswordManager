<Window x:Class="PasswordManager.SignUP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="Password Manager" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="Registation" FontSize="24" Margin="30" FontWeight="Bold" HorizontalAlignment="Center"></Label>

        <DockPanel Margin="15" Grid.Row="1" >
            <TextBlock Text="Username:" FontWeight="Bold" FontSize="16" Margin="10"/>
            <TextBox VerticalContentAlignment="Center"  Margin="5"></TextBox>
        </DockPanel>

        <DockPanel  Margin="15" Grid.Row="2" >
            <TextBlock Text="Password:" FontWeight="Bold" FontSize="16" Margin="10"/>
            <TextBox VerticalContentAlignment="Center" Margin="10,5,5,5"></TextBox>
        </DockPanel>

        <DockPanel  Margin="15" Grid.Row="3" >
            <TextBlock Text="Confirm password:" MaxWidth="80" TextWrapping="Wrap" FontWeight="Bold" FontSize="16" Margin="10"/>
            <TextBox VerticalContentAlignment="Center" Margin="10,5,5,5"></TextBox>
        </DockPanel>

        <Button Grid.Row="4" Content="Register" Padding="10" FontSize="15" FontWeight="Bold" BorderThickness="3" Background="Transparent" Margin="100,20"></Button>

        <StackPanel Grid.Row="5">
            <TextBlock HorizontalAlignment="Center" >
            <Hyperlink FontSize="16" TextDecorations="{x:Null}" Click="Login">
                <Label>Already have an account?</Label>
            </Hyperlink>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="6">
            <TextBlock HorizontalAlignment="Center">
            <Hyperlink FontSize="16" TextDecorations="{x:Null}"/>
            </TextBlock>
        </StackPanel>

    </Grid>
</Window>
